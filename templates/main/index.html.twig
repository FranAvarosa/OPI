    <script>
        class CategoryData {
            constructor(categoryName, numberOfHours, numberOfExtraHours) {
                this.categoryName = categoryName;
                this.numberOfHours = numberOfHours;
                this.numberOfExtraHours = numberOfExtraHours;
            }
