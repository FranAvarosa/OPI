            function getHourInCurrentYear(durations, yearStart, yearEnd) {
                let hourInCurrentYear = [];
                let indexOfTheDay = 0;

                for (let i = moment(yearStart); i <= moment(yearEnd); i.add(1, 'days')) {
                    for (let duration of durations) {

                        let daysHours = duration[moment(yearStart).add(indexOfTheDay, 'days').format("YYYY-MM-DD")];

                        let extraHours = duration.extraTime;

                        if (daysHours !== undefined) {
                            daysHours = (parseInt(daysHours) / 60);
                            extraHours = (parseInt(extraHours) / 60);

                            let category = hourInCurrentYear.filter(element => element.categoryName === duration.category);

                            if (category.length > 0) {
                                category[0].numberOfHours += daysHours;
                                category[0].numberOfExtraHours += extraHours;
                            } else {
                                hourInCurrentYear.push(new CategoryData(duration.category, daysHours, extraHours))
                            }
                        }
                    }
                    indexOfTheDay++;
                }

                return hourInCurrentYear;
            }

            function getNumberOfHours(currentDate, durations) {
                let weekStart = currentDate.clone().startOf('isoweek');

                // let monthStart = currentDate.startOf('month').format();

                let yearStart = currentDate.startOf('year').format();
                let yearEnd = currentDate.endOf('year').format();

                let hoursInCurrentWeek = getHourInCurrentWeek(durations, weekStart);
                let hoursInCurrentYear = getHourInCurrentYear(durations, yearStart, yearEnd);
                // let hoursInCurrentMonth = getHourInCurrentMonth(durations, currentDate, monthStart);

                // Week
                document.getElementById('extraHourByCategoriesWeek').innerHTML = '';

                let totalOfHoursInWeek = 0;
                let totalOfExtraHoursInWeek = 0;
                for (let hourInCurrentWeek of hoursInCurrentWeek) {
                    totalOfHoursInWeek += hourInCurrentWeek.numberOfHours;
                    totalOfHoursInWeek += hourInCurrentWeek.numberOfExtraHours;
                    totalOfExtraHoursInWeek += hourInCurrentWeek.numberOfExtraHours;

                    let newDiv = document.createElement("div");
                    newDiv.innerHTML =
                        '<h3>' + hourInCurrentWeek.categoryName + ' : ' +
                        parseFloat((hourInCurrentWeek.numberOfHours + hourInCurrentWeek.numberOfExtraHours).toFixed(1)) + ' H</h3>';

                    document.getElementById('extraHourByCategoriesWeek').appendChild(newDiv);
                }

                totalOfHoursInWeekHolder.getElementsByClassName('hourHolder')[0].innerHTML = parseFloat(totalOfHoursInWeek.toFixed(1));
                totalOfHoursInWeekHolder.getElementsByClassName('extraHourHolder')[0].innerHTML = parseFloat(totalOfExtraHoursInWeek.toFixed(1));

