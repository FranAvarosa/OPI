<div class="container-fluid">
    <div class="row justify-content-end text-center">
        <div class="col-4">
        </div>
        <div class="col-4">
            <div class="h1">
                {% if calId is not defined %}
                    Planning de {{ app.user.prenom }} {{ app.user.nom }}
                {% endif %}
                {% for lists in list %}
                    {% if calId is defined and lists.id == calId %}
                        Planning de {{ lists.prenom }} {{ lists.nom }}
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        <div class="col-4">
            <div class="loggedUser">"Vous êtes connecté en tant que {{ app.user.prenom }} {{ app.user.nom }}"  </div>
            <a href="{{ path('app_logout') }}" class="btn btn-danger">Déconnexion</a>
            {% if userService1 is defined %}
                <h2>{{ userService1 }}</h2><br/>
            {% endif %}
            {% for lists in list %}
                {% if userService1 is defined and lists.service1 == userService1 %}
                    <a href="{{ path('main_chef', {'id': lists.id}) }}">{{ lists.prenom }} {{ lists.nom }}</a><br/>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
<br />
<div id="calendrier">
</div>
