{% extends 'base.html.twig' %}

{% block title %}Changer votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Changer votre mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Merci d'entrer votre adresse email afin que nous puissions vous envoyer un lien de changement de mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">Envoyer l'email de changement de mot de passe</button>
    {{ form_end(requestForm) }}
    <a class="btn btn-danger" href="{{ path('app_login') }}">Retour Ã  la connexion</a>
{% endblock %}
