{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    {% if app.user %}
        <div class="container-fluid">
            <div class="loggedcontainer">
                <p class="loggedmessage">Accès refusé - droits insuffisants<br />
                    <a href="{{ path('app_logout') }}">Cliquez ici pour vous déconnectez</a>
                </p>
            </div>
            <div class="row justify-content-center text-center">
                <div class="col-offset-4 col-4">
                    <a href="{{ path('main') }}" class="btn btn-secondary">Retourner au calendrier</a>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}